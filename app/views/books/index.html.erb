<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
  </head>

  <body>
    <div>
      <%= flash[:notice] %>
    </div>

    <h1>Books</h1>

    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'show',book_path(book) %></td>
          <td><%= link_to 'edit',edit_book_path(book) %></td>
          <td><%= link_to 'destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      </tbody>
    <% end %>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <h2>New book</h2>

      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <h4>title</h4>
      <%= f.text_field :title %>

      <h4>body</h4>
      <%= f.text_area :body %></br>
      <%= f.submit'Create Book' %>

    <% end %>

  </body>

</html>

